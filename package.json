{
  "name": "oliver",
  "version": "1.0.0",
  "private": true,
  "description": "",
  "scripts": {
    "db:start": "pnpm --filter @oliver/database db:start",
    "db:stop": "pnpm --filter @oliver/database db:stop",
    "db:gen": "pnpm --filter @oliver/database prisma:gen",
    "db:migrate": "pnpm --filter @oliver/database prisma:migrate",
    "db:push": "pnpm --filter @oliver/database prisma:push",
    "db:reset": "pnpm --filter @oliver/database prisma:reset",
    "db:seed": "pnpm --filter @oliver/database prisma:seed",
    "web:dev": "pnpm --filter web dev",
    "api:dev": "cd apps/api && DATABASE_URL=postgresql://postgres:postgres@localhost:54322/postgres cargo run --bin api",
    "all:dev": "concurrently \"pnpm web:dev\" \"pnpm api:dev\" \"pnpm docs:start\"",
    "docs:start": "pnpm --filter docs start",
    "evm:node": "pnpm --filter evm node",
    "evm:deploy:erc20": "pnpm --filter evm deploy:erc20",
    "types:sync": "cd apps/api && typeshare . --lang=typescript --output-file=../../packages/types/src/generated/api.ts"
  },
  "devDependencies": {
    "concurrently": "^9.2.1"
  },
  "packageManager": "pnpm@10.7.0+sha512.6b865ad4b62a1d9842b61d674a393903b871d9244954f652b8842c2b553c72176b278f64c463e52d40fff8aba385c235c8c9ecf5cc7de4fd78b8bb6d49633ab6"
}
