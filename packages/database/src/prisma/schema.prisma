generator client {
  provider = "prisma-client-js"
  output   = "../../generated/client"
}

datasource db {
  provider = "postgresql"
}

model User {
  id                  String   @id @default(uuid())
  privyUserId         String   @unique
  walletId            String?
  wallet              Wallet?  @relation(fields: [walletId], references: [id], onDelete: SetNull)
  aiWalletId          String?  @unique
  aiWallet            Wallet?  @relation("AiWallet", fields: [aiWalletId], references: [id], onDelete: SetNull)
  createdAt           DateTime @default(now())
  updatedAt           DateTime @updatedAt

  payments    PaymentHistory[]
  userTransactions UserTransaction[]
  sessionDetails SessionDetails?

  @@index([walletId])
  @@index([aiWalletId])
  @@map("users")
}

model Wallet {
  id        String   @id @default(uuid())
  address   String   @unique
  updatedAt DateTime @updatedAt
  createdAt DateTime @default(now())

  users  User[]
  aiUser User? @relation("AiWallet")

  @@index([address])
  @@map("wallets")
}

model UserTransaction {
  id        String   @id @default(uuid())
  type      String
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  transactionId String
  transaction Transaction @relation(fields: [transactionId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("user_transactions")
}

model Transaction {
  id        String   @id @default(uuid())
  hash      String   @unique
  updatedAt DateTime @updatedAt
  createdAt DateTime @default(now())

  userTransactions UserTransaction[]

  @@index([hash])
  @@map("transactions")
}

model Merchant {
  id        String    @id @default(uuid())
  name      String
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  products  Product[]

  @@map("merchants")
}

model Product {
  id          String           @id @default(uuid())
  name        String
  description String
  price       BigInt // USDC単位の価格（wei単位、6桁小数点想定）
  stockStatus String           @default("in_stock") // 在庫ステータス（"in_stock" | "low_stock" | "out_of_stock"）
  imageUrl    String? // 商品画像URL
  category    String? // カテゴリ（例: "cat_food", "dog_food"など）
  attributes  Json? // カテゴリごとの属性（キー・バリューのマップ）
  merchantId  String
  merchant    Merchant         @relation(fields: [merchantId], references: [id], onDelete: Cascade)
  payments    PaymentHistory[]
  createdAt   DateTime         @default(now())
  updatedAt   DateTime         @updatedAt

  @@map("products")
}

model PaymentHistory {
  id          String    @id @default(uuid())
  paymentId   String    @unique // x402決済ID（0x...形式）
  payer       String // 支払い者のアドレス
  userId      String? // ユーザーID（ユーザーが登録されている場合）
  user        User?     @relation(fields: [userId], references: [id], onDelete: SetNull)
  recipient   String // 受取人のアドレス
  amount      String // 決済金額（wei単位の文字列）
  asset       String // トークンコントラクトアドレス
  network     String // ネットワーク名（例: "base", "localhost"）
  chainId     Int // チェーンID
  status      String    @default("pending") // pending, settled, failed
  txHash      String? // トランザクションハッシュ（settle後）
  blockNumber String? // ブロック番号（settle後）
  orderId     String? // 注文ID（商品購入の場合）
  productId   String? // 商品ID（商品購入の場合）
  product     Product?  @relation(fields: [productId], references: [id], onDelete: SetNull)
  metadata    Json? // 追加情報（JSON）
  createdAt   DateTime  @default(now())
  settledAt   DateTime? // 決済完了日時

  @@index([paymentId])
  @@index([payer])
  @@index([userId])
  @@index([productId])
  @@index([status])
  @@index([createdAt])
  @@map("payment_history")
}

model SessionDetails {
  id             String   @id @default(uuid())
  userId         String   @unique
  user           User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  sessionDetails Json     // sessionDetailsのJSONデータ
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  @@index([userId])
  @@map("session_details")
}
