{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "noImplicitAny": true,

    "moduleResolution": "bundler",
    "baseUrl": ".",
    "paths": {
      "@oliver/shared/*": ["./src/*"],
    },
    "resolveJsonModule": true
  }
}
